;=========================================
; The std method calling convention
;=========================================
STDMETHOD	MACRO	name, argl :VARARG
	LOCAL @tmp_a
	LOCAL @tmp_b

	@tmp_a	TYPEDEF PROTO argl
	@tmp_b	TYPEDEF PTR @tmp_a
	name		@tmp_b		?
ENDM

;=========================================
; This will set the struct to zero
;=========================================
DDINITSTRUCT	MACRO	arg1, arg2
	invoke RtlFillMemory, arg1, arg2, 0
ENDM

;=========================================
; A Macro for invoking DDraw stuff
;	1 and 4
;=========================================
DDINVOKE	MACRO	func, this, arglist :VARARG
	mov	eax , [this]
	mov	eax , [eax]

	IFB <arglist>
		INVOKE [IDirectDrawVtbl. func][eax], this
	ELSE
		INVOKE [IDirectDrawVtbl. func][eax], this, arglist
	ENDIF
ENDM

DD4INVOKE	MACRO	func, this, arglist :VARARG
